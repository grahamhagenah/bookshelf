datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String @id @default(cuid())
  email     String @unique
  firstname String
  surname   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password  Password?

  books     Book[]

  notificationsSent     Notification[] @relation("notificationsSent")
  notificationsReceived Notification[] @relation("notificationsReceived")

  followedBy User[]  @relation("UserFollows")
  following  User[]  @relation("UserFollows")
}

model Password {
  hash   String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

model Book {
  id     String @id @default(cuid())
  cover  String
  title  String
  author String
  body   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String
}

model Notification {
  id  String @id @default(cuid())

  user     User     @relation("notificationsSent", fields: [userId], references: [id])
  friend   User     @relation("notificationsReceived", fields: [id], references: [id])

  typeOf   String
  
  userId   String
  friendId String

  @@index([userId], name: "user_id_index")
  @@index([friendId], name: "friend_id_index")

}