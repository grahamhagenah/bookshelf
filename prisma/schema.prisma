datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                 String  @id @default(cuid())
  email              String  @unique
  firstname          String
  surname            String
  shareToken         String? @unique
  isAdmin            Boolean @default(false)
  darkMode           Boolean @default(false)
  profileEmoji       String?
  emailNotifications Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password  Password?

  books     Book[]
  borrowedBooks Book[] @relation("borrowedBooks")
  lendingHistory LendingHistory[]

  notificationsSent     Notification[] @relation("sender")
  notificationsReceived Notification[] @relation("receiver")

  followedBy User[]  @relation("UserFollows")
  following  User[]  @relation("UserFollows")
}

model Password {
  hash   String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

model Book {
  id            String  @id @default(cuid())
  cover         String
  title         String
  author        String
  body          String
  datePublished String?
  pageCount     Int?
  subjects      String?
  publisher     String?
  openLibraryKey String?
  lendCount     Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String

  borrower   User?   @relation("borrowedBooks", fields: [borrowerId], references: [id])
  borrowerId String?
  borrowedAt DateTime?
  dueDate    DateTime?

  notifications Notification[]
  lendingHistory LendingHistory[]
}

model LendingHistory {
  id         String   @id @default(cuid())

  book       Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  bookId     String

  borrower   User     @relation(fields: [borrowerId], references: [id])
  borrowerId String

  borrowedAt DateTime
  returnedAt DateTime?

  createdAt  DateTime @default(now())

  @@index([bookId], name: "lending_history_book_index")
  @@index([borrowerId], name: "lending_history_borrower_index")
}

model Notification {
  id        String @id @default(cuid())
  type      String @default("FRIEND_REQUEST")

  sender     User     @relation("sender", fields: [senderId], references: [id])
  receiver   User     @relation("receiver", fields: [receiverId], references: [id])

  senderName String

  senderId   String
  receiverId String

  book       Book?   @relation(fields: [bookId], references: [id])
  bookId     String?
  bookTitle  String?

  read        Boolean  @default(false)
  actionTaken String?
  createdAt   DateTime @default(now())

  @@index([senderId], name: "sender_id_index")
  @@index([receiverId], name: "receiver_id_index")
}